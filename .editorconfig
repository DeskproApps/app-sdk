root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 100

[Dockerfile]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.{neon,neon.dist}]
indent_style = tab
indent_size = 4
